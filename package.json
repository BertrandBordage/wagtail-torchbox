{
  "name": "wagtail-torchbox",
  "version": "1.0.0",
  "author": "Torchbox Ltd",
  "scripts": {
    "autoprefixer": "postcss -u autoprefixer -r tbx/core/static/css/*.css",
    "scss": "node-sass --output-style compressed -o tbx/core/static/css tbx/core/static/torchbox/css",
    "serve": "browser-sync start --proxy 'http://localhost:8000' --files 'tbx/core/static/css/*.css, tbx/core/templates/torchbox/*.html, !node_modules/**/*.html'",
    "build:css": "npm run scss && npm run autoprefixer",
    "build": "npm run build:css",
    "watch:css": "onchange 'tbx/core/static/torchbox/css' -- npm run build:css -- '{{event}} to {{changed}}'",
    "watch": "npm-run-all -p serve watch:css",
    "postinstall": "npm run build && npm run watch"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "browser-sync": "^2.13.0",
    "node-sass": "^3.7.0",
    "npm-run-all": "^2.1.1",
    "onchange": "^2.4.0",
    "postcss-cli": "^2.5.2"
  }
}
